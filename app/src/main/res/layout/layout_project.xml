<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="10sp"
    android:layout_marginBottom="5sp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProjectPhoto"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/layout_project_img"
            android:scaleType="centerCrop"
            android:src="@color/colorLightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPostProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/colorLightGrey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="6sp"
                android:paddingEnd="6sp">

                <TextView
                    android:id="@+id/txtPostName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_project_title"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPostDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_project_second_line"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageButton
                android:id="@+id/btnProjectOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_placeholder"
                android:src="@drawable/ic_more_vert_black_24dp" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>